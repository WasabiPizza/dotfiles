#exec nextcloud --background
#exec ibus-daemon -dr
#exec fcitx5 -d
exec swayidle -w \
          timeout 500 'swaylock -f -i ~/.local/lock.jpg' \
          timeout 600 'swaymsg "output * power off"' \
	  resume 'swaymsg "output * power on"' \
          before-sleep 'playerctl pause; swaylock -f -i ~/.local/lock.jpg'

